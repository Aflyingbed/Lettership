<!DOCTYPE html>
<html lang="en" data-theme="coffee">
  <head>
    <title>Sign Up</title>
    <%- include('partials/head.ejs') %>
    <%- include('partials/common-scripts.ejs') %>
    <script src="/scripts/signupForm.js" defer></script>
  </head>
  <body class="min-h-screen bg-base-200 flex items-center justify-center font-['Schoolbell']">
    <div class="card w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h1 class="text-2xl font-bold text-center mb-6">Sign Up</h1>
        <form
          id="signupForm"
          action="/sign-up"
          method="POST"
          class="form-control"
        >
          <div class="form-control">
            <label for="firstName" class="label">
              <span class="label-text">First Name</span>
            </label>

            <input
              type="text"
              id="firstName"
              name="firstName"
              value="<%= oldInput.firstName  %>"
              minlength="2"
              maxlength="30"
              class="input input-bordered"
            />
            <span
              id="firstNameError"
              class="text-error text-sm mt-1 <%= errors && errors.find(error => error.path === 'firstName') ? '' : 'hidden' %>"
            >
              <% if (errors && errors.find(error => error.path ===
              'firstName')) { %> <%= errors.find(error => error.path ===
              'firstName').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-4">
            <label for="lastName" class="label">
              <span class="label-text">Last Name</span>
            </label>
            <input
              type="text"
              id="lastName"
              name="lastName"
              value="<%= oldInput.lastName %>"
              minlength="2"
              maxlength="30"
              class="input input-bordered"
            />
            <span
              id="lastNameError"
              class="text-error text-sm mt-1 <%= errors && errors.find(error => error.path === 'lastName') ? '' : 'hidden' %>"
            >
              <% if (errors && errors.find(error => error.path ===
              'lastName')) { %> <%= errors.find(error => error.path ===
              'lastName').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-4">
            <label for="username" class="label">
              <span class="label-text">Username</span>
            </label>
            <input
              type="text"
              id="username"
              name="username"
              value="<%= oldInput.username %>"
              minlength="3"
              maxlength="20"
              class="input input-bordered"
            />
            <span
              id="usernameError"
              class="text-error text-sm mt-1 <%= errors && errors.find(error => error.path === 'username') ? '' : 'hidden' %>"
            >
              <% if (errors && errors.find(error => error.path ===
              'username')) { %> <%= errors.find(error => error.path ===
              'username').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-4">
            <label for="password" class="label">
              <span class="label-text">Password</span>
            </label>
            <input
              type="password"
              id="password"
              name="password"
              class="input input-bordered"
            />
            <span
              id="passwordError"
              class="text-error text-sm mt-1 <%= errors && errors.find(error => error.path === 'password') ? '' : 'hidden' %>"
            >
              <% if (errors && errors.find(error => error.path ===
              'password')) { %> <%= errors.find(error => error.path ===
              'password').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-4">
            <label for="confirmPassword" class="label">
              <span class="label-text">Confirm Password</span>
            </label>
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              class="input input-bordered"
            />
            <span
              id="confirmPasswordError"
              class="text-error text-sm mt-1 <%= errors && errors.find(error => error.path === 'confirmPassword') ? '' : 'hidden' %>"
            >
              <% if (errors && errors.find(error => error.path ===
              'confirmPassword')) { %> <%= errors.find(error => error.path ===
              'confirmPassword').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </div>
        </form>
        <div class="text-center mt-6 font-semibold">
          <p class="text-sm">
            Already have an account?
            <a href="/login" class="link link-primary no-underline">Login</a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
