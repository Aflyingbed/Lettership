<!DOCTYPE html>
<html lang="en" data-theme="coffee">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="/scripts/loginForm.js" defer></script>
    <script src="/scripts/theme.js" defer></script>
    <link rel="stylesheet" href="/styles/output.css" />
  </head>
  <body class="min-h-screen bg-base-200 flex items-center justify-center font-['Schoolbell']">
    <div class="card w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h1 class="text-2xl font-bold text-center mb-6">Login</h1>
        <form id="loginForm" action="/login" method="POST" class="form-control">
          <div class="form-control">
            <label for="username" class="label">
              <span class="label-text">Username</span>
            </label>
            <input
              type="text"
              id="username"
              name="username"
              value="<%= oldInput.username %>"
              class="input input-bordered"
            />
            <span id="usernameError" class="text-error text-sm mt-1 hidden">
              <% if (errors && errors.find(error => error.path ===
              'username')) { %> <%= errors.find(error => error.path ===
              'username').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-4">
            <label for="password" class="label">
              <span class="label-text">Password</span>
            </label>
            <input
              type="password"
              id="password"
              name="password"
              class="input input-bordered"
            />
            <span id="passwordError" class="text-error text-sm mt-1 hidden">
              <% if (errors && errors.find(error => error.path ===
              'password')) { %> <%= errors.find(error => error.path ===
              'password').msg %> <% } %>
            </span>
          </div>

          <div class="form-control mt-6">
            <button type="submit" class="btn btn-primary">Log In</button>
          </div>
        </form>
        <div class="text-center mt-6">
          <p class="text-sm">
            Don't have an account?
            <a href="/sign-up" class="link link-primary no-underline">Sign Up</a>
          </p>
          <p class="text-sm mt-2">
            Forgot your password?
            <a href="/forgot-password" class="link link-primary no-underline">Recover</a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
